<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="main" extends="struts-default">
		<action name="login" class="vn.com.fpt.actions.LoginAction">
			<result name="success">/hello.jsp</result>
		</action>
	</package>
	
	<package name="add" extends="struts-default">
		<action name="add" class="vn.com.fpt.actions.AddAction">
			<result name="add">/add.jsp</result>
		</action>
	</package>
	
	<package name="failed" extends="struts-default">
		<action name="failed" class="vn.com.fpt.actions.NewItemFailedAction">
			<result name="failed">/fAdd.jsp</result>
		</action>
	</package>
	<package name="Item" extends="struts-default">
		<action name="Item" class="vn.com.fpt.actions.ViewItemAction">
			<result name="Item">/viewItem.jsp</result>
		</action>
	</package>
</struts>